set -o errexit
set -x

#########################################################################
#                                                                       #
#                            Envoy Startup                              #
#                                                                       #
#########################################################################

# Start envoy.
/usr/local/bin/envoy --config-path /etc/envoy/envoy.yaml -l warn &
sleep 2

#########################################################################
#                                                                       #
#                             KVS Startup                               #
#                                                                       #
#########################################################################


export GLOG_logtostderr=1
export GLOG_stderrthreshold=0
export GRPC_DNS_RESOLVER=native
export PS_VERBOSITY=10

# Start the server first.
"/server" --delta_directory=$AZURE_LOCAL_DATA_DIR --realtime_directory=$AZURE_LOCAL_REALTIME_DATA_DIR --launch_hook= --logging_verbosity_level=$PS_VERBOSITY --public_key_endpoint=$PUBLIC_KEY_ENDPOINT --stderrthreshold=0
